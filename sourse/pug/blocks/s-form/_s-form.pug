mixin s-form()
	// start s-form
	+b.s-form.section.block-with-lazy#s-form&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Let's be Friends!
				+e.text  Subscribe to get news about latest updates, hot offers and new products.
			+form-wrap
				+input("Enter your email")
				+e.INPUT.btn(type="submit" value="subscribe")
	// end s-form